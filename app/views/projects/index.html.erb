<div class="container">
	<div class="articles-header">
    	<h2>项目</h2>
  	</div>
  	<div class="projects-wrapper">
	    <ul class="project-nav">
			<li class="active"><a href="#project" data-toggle="tab">拍摄计划</a></li>
			<li><a href="#tickets" data-toggle="tab">一句话项目</a></li>
		</ul>
		<div class="tab-content">
		  <div class="tab-pane active" id="projects">
		  	<%= render 'project_list' %>
		  </div>
		  <div class="tab-pane" id="tickets">
		  	<table class="table table-hover">
				<thead>
					<tr>
						<th>描述</th>
						<th>地点</th>
						<th>需求</th>
						<th>发布日期</th>
						<th>联系方式</th>
						<th>发布用户</th>
					</tr>
				</thead>
				<tbody>
					<% @tickets.each do |ticket| %>
					<tr>
						<td class="ticket-title">
							<%= ticket.title %>
						</td>
						<td class="ticket-location">
							<%= ticket.location %>
						</td>
						<td class="ticket-needs">
							<% ticket.need_list.each do |tag| %>
								<span class="tag"><%= tag %></span>
							<% end  %>
						</td>
						<td class="ticket-date">
							<%= ticket.updated_at.strftime("%Y-%m-%d %H:%M") %>
						</td>
						<td class="ticket-contact">
							<%= ticket.contact %>
						</td>	
						<td class="ticket-user">
							<a href="<%= user_path(ticket.user) %>">
								<%= image_tag ticket.user.avatar %>
							</a>
						</td>	
					</tr>
					<% end %>
				</tbody>
			</table>
		  </div>
		</div>
	</div>
</div>