<div class="container">
	<div class="articles-header">
    	<h2><%= t('projects.project_header') %></h2>
  	</div>
  	<div class="projects-wrapper">
	    <ul class="project-nav">
			<li class="active"><a href="#projects" data-toggle="tab"><%= t('projects.project_plan') %></a></li>
			<li><a href="#tickets" data-toggle="tab"><%= t('home.tickets') %></a></li>
		</ul>
		<div class="tab-content">
		  <div class="tab-pane active" id="projects">
		  	<%= render 'project_list' %>
		  </div>
		  <div class="tab-pane" id="tickets">
		  	<table class="table table-hover">
				<thead>
					<tr>
						<th><%= t('projects.desc') %></th>
						<th><%= t('projects.location') %></th>
						<th><%= t('projects.needs') %></th>
						<th><%= t('projects.date') %></th>
						<th><%= t('projects.contact') %></th>
						<th><%= t('projects.user') %></th>
					</tr>
				</thead>
				<tbody>
					<% @tickets.each do |ticket| %>
					<tr>
						<td class="ticket-title">
							<%= ticket.title %>
						</td>
						<td class="ticket-location">
							<%= ticket.location %>
						</td>
						<td class="ticket-needs">
							<% ticket.need_list.each do |tag| %>
								<span class="tag"><%= tag %></span>
							<% end  %>
						</td>
						<td class="ticket-date">
							<%= ticket.updated_at.strftime("%Y-%m-%d %H:%M") %>
						</td>
						<td class="ticket-contact">
							<%= ticket.contact %>
						</td>	
						<td class="ticket-user">
							<a href="<%= user_path(ticket.user) %>">
								<%= image_tag ticket.user.avatar %>
							</a>
						</td>	
					</tr>
					<% end %>
					<%= paginate @tickets %>
				</tbody>
			</table>
		  </div>
		</div>
	</div>
</div>