<div class="user-wrapper">
  <div id="user-content">
    <ul class="user-nav">
      <li class="active"><a href="#likes" data-toggle="tab">喜欢</a></li>
      <li><a href="#projects" data-toggle="tab">项目</a></li>
    </ul>
    <div class="user-content">
      <div id="likes" class="tab-pane active">
        <%= render 'likes' %>
      </div>
      <div id="projects" class="tab-pane">
        <%= render 'prjects' %>
      </div>
    </div>
  </div>
  <%= render 'profile', :object => @user %>
</div>
<div id="message-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="modal-title">发送消息</div>
      </div>
      <div class="modal-body">
        <%= form_for Message.new, :html => { :class => 'form-horizontal'} do |f|%>
          <%= hidden_field_tag 'message[to]', @user.id %>
          <div class="form-group">
            <%= f.text_area :content, :rows => '4', :class => "form-control", :autofocus => true %>
          </div>
          <%= f.submit '发送消息', :class => 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>