<div class="user-wrapper">
  <div id="user-content">
    <ul class="user-nav">
      <li class="active">
        <a href="#likes" data-toggle="tab"><%= t('dashboard.tab.like') %></a>
      </li>
      <li>
        <a href="#user-projects" data-toggle="tab"><%= t('dashboard.tab.project') %></a>
      </li>
    </ul>
    <div class="user-content tab-content">
      <div id="likes" class="tab-pane active">
        <%= render 'likes' %>
      </div>
      <div id="user-projects" class="tab-pane">
        <%= render 'projects' %>
      </div>
    </div>
  </div>
  <%= render 'profile', :object => @user %>
</div>
<div id="message-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="modal-title"><%= t('dashboard.message_modal.send') %></div>
      </div>
      <div class="modal-body">
        <%= form_for Message.new, :html => { :class => 'form-horizontal'} do |f|%>
          <%= hidden_field_tag 'message[to]', @user.id %>
          <div class="form-group">
            <%= f.text_area :content, :rows => '4', :class => "form-control", :autofocus => true %>
          </div>
          <%= f.submit t('dashboard.message_modal.send'), :class => 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>