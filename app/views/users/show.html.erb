<div class="user-wrapper">
  <div id="user-content">
    <ul class="user-nav">
      <li><a href="#" class="active">喜欢</a></li>
      <li><a href="#">项目</a></li>
    </ul>
    <div class="user-content">
      <%= render 'likes', :object => @likes %>
    </div>
  </div>
  <div id="user-profile">
    <div class="avatar">
      <img src="<%= gravatar_image_url(@user.email, size: 160) %>" alt=""/>
    </div>
    <div class="nickname"><%= @user.nickname %></div>
    <div class="role">导演,  编剧</div>
    <% if @user.location %>
      <div class="location"><i class="fa fa-map-marker"></i><%= @user.location %></div>
    <% end %>
    <div class="about-divider"></div>
    <div class="about">
      <%= @user.about %>
    </div>
    <div class="actions">
      <a href="#" class="btn btn-warning"><i class="fa fa-plus"></i>关注</a>
      <a href="#" class="btn btn-info" data-toggle="modal" data-target="#message-modal"><i class="fa fa-comment"></i>约谈</a>
    </div>
  </div>
</div>
<div id="message-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="modal-title">发送消息</div>
      </div>
      <div class="modal-body">
        <%= form_for Message.new, :html => { :class => 'form-horizontal'} do |f|%>
          <%= hidden_field_tag 'message[to]', @user.id %>
          <div class="form-group">
            <%= f.text_area :content, :rows => '4', :class => "form-control", :autofocus => true %>
          </div>
          <%= f.submit '发送消息', :class => 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>