<div id="user-profile">
  <div class="avatar">
    <%= image_tag @user.avatar %>
  </div>
  <div class="nickname"><%= @user.nickname %></div>
  <div class="role"><%= @user.role_list.join(' ') %></div>
  <% if @user.location %>
    <div class="location"><i class="fa fa-map-marker"></i><%= @user.location %></div>
  <% end %>
  <div class="about-divider"></div>
  <div class="about">
    <%= @user.about %>
  </div>
  <% if current_user != @user %>
  <div class="actions">
    <% if current_user and current_user.following?(@user) %>
    <a href="#" id="follow" class="btn btn-warning followed" data-id="<%= @user.id %>" data-state="followed"><i class="fa fa-minus"></i><span>已关注</span></a>
    <% else %>
    <a href="#" id="follow" class="btn btn-warning" data-id="<%= @user.id %>" data-state=""><i class="fa fa-plus"></i><span>关注</span></a>
    <% end %>
    <a href="#" class="btn btn-info" data-toggle="modal" data-target="#message-modal"><i class="fa fa-comment"></i>约谈</a>
  </div>
  <% end %>
</div>