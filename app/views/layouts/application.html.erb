    <div id="login-modal" class="modal fade">
      <div class="modal-dialog login-wrapper">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <div class="modal-title title">VMovie Login</div>
          </div>
          <div class="modal-body">
            <!--<div class="title">VMovie Login</div>-->
            <%# if devise_mapping.omniauthable? %>
            <div class="login-auth">
              <ul>
                <li class="weibo">
                  <a href="#">
                    <i class="fa fa-weibo"></i>
                  </a>
                </li>
                <li class="facebook">
                  <a href="#">
                    <i class="fa fa-facebook-square"></i>
                  </a>
                </li>
                <li class="twitter">
                  <a href="#" class="">
                    <i class="fa fa-twitter-square"></i>
                  </a>
                </li>
                <li class="google">
                  <a href="#">
                    <i class="fa fa-google-plus"></i>
                  </a>
                </li>
              </ul>
            </div>
            <%# end %>
            <div class="divider"></div>
            <div id="login">
              <%= form_for :user, :url => session_path(:user), :html => {:id => 'login-form'} do |f| %>
                <fieldset class="clearfix">
                  <p>
                    <span class="fontawesome-user"></span>
                    <%= f.text_field :email, :autofocus => true, :placeholder => '邮箱' %>
                    <!--<input type="text" placeholder="用户名" required>-->
                  </p>
                  <p>
                    <span class="fontawesome-lock"></span>
                    <%= f.password_field :password, :placeholder => '密码' %>
                    <!--<input type="password"  placeholder="密码" required>-->
                  </p>
                  <p>
                    <%= f.submit '登录' %>
                    <!--<input type="submit" value="登录">-->
                  </p>
                </fieldset>
              <% end %>
              <p>没有帐号? <a href="#" id="register-link">立即注册</a><span class="fontawesome-arrow-right"></span></p>
            </div>
            <div id="register" style="display:none;">
              <%= form_for :user, :url => registration_path(:user), :html => {:id => 'register-form'} do |f| %>
                <fieldset class="clearfix">
                  <p>
                    <span class="fontawesome-user"></span>
                    <%= f.text_field :email, :autofocus => true, :placeholder => '邮箱' %>
                  </p>
                  <p>
                    <span class="fontawesome-font"></span>
                    <%= f.text_field :nickname, :placeholder => '昵称' %>
                  </p>
                  <p>
                    <span class="fontawesome-lock"></span>
                    <%= f.password_field :password, :placeholder => '密码' %>
                  </p>
                  <p>
                    <span class="fontawesome-lock"></span>
                    <%= f.password_field :password_confirmation, :placeholder => '确认密码' %>
                  </p>
                  <p>
                    <%= f.submit '注册' %>
                  </p>
                </fieldset>
              <% end %>
              <p><a href="#" id="login-link"><< 返回登录</a></p>
            </div>

          </div>
        </div>
      </div>
