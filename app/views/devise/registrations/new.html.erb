<div class="wrapper user-login">
  <div class="login-wrapper">
    <div class="modal-title title"><%= t('promoker') %> <%= t('home.login_modal.register') %></div>
    <div class="login-auth">
      <ul>
        <li class="weibo">
          <a href="#">
            <i class="fa fa-weibo"></i>
          </a>
        </li>
        <li class="facebook">
          <a href="#">
            <i class="fa fa-facebook-square"></i>
          </a>
        </li>
        <li class="twitter">
          <a href="#" class="">
            <i class="fa fa-twitter-square"></i>
          </a>
        </li>
        <li class="google">
          <a href="#">
            <i class="fa fa-google-plus"></i>
          </a>
        </li>
      </ul>
    </div>
    <%# end %>
    <div class="divider"></div>
    <div id="register">
      <%= form_for(resource, as: resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <fieldset class="clearfix">
          <p>
            <%= f.email_field :email, :autofocus => true, :placeholder => t('home.login_modal.email') %>
          </p>
          <p>
            <%= f.text_field :nickname, :placeholder => t('home.login_modal.nickname'), autocomplete: "off" %>
          </p>
          <p>
            <%= f.password_field :password, :placeholder => t('home.login_modal.password'), autocomplete: "off" %>
          </p>
          <p>
            <%= f.password_field :password_confirmation, :placeholder => t('home.login_modal.password_confirmation'), autocomplete: "off" %>
          </p>
          <p>
            <%= f.submit t('home.login_modal.register') %>
          </p>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>